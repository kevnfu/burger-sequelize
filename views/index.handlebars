<div class="container">
  <div class="row">
    <div class="col text-center">
      <h1 class="display-1">Eat burgers</h1>
    </div>
  </div>
  <br><br>
  
  <div class="row">
    <div class="col-12 col-md-6">
      <h3>Available Burgers</h3>
      <ul class="list-group">
      {{#each burgers}}
        {{#unless devoured}}
          <li class="list-group-item">
            {{id}}. {{name}} 
            <button value="{{id}}" 
              class="btn btn-secondary devour-btn float-right">
              Devour it
            </button>
          </li>
        {{/unless}}
      {{/each}}
      </ul>
    </div>

    <div class="col-12 col-md-6">
      <h3>Devoured Burgers</h3>
      <ul class="list-group">
      {{#each burgers}}
        {{#if devoured}}
          <li class="list-group-item disabled">
            {{id}}. {{name}}
          </li>
        {{/if}}
      {{/each}}
      </ul>
    </div>
  </div>
  <br><br>
  
  <div class="row justify-content-center">
    <div class="col-6">
      <form>
        <div class="form-group">
          <input type="input" class="form-control" id="burger-input" required="required">
          <small class="form-text text-muted">Enter a burger you want then click the submit button</small>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

{{#section 'script'}}
{{!-- <script src="public/test.js" type="text/javascript"></script> --}}
<script type="text/javascript">
  $(document).on('click', '.devour-btn', function(event) {
    $.ajax({
      url: '/api/burgers',
      method: 'PUT',
      contentType: 'application/json',
      data: JSON.stringify({id: $(this).val()}),
      statusCode: {
        200: function() { location.reload() },
        500: function() { alert('Failed to eat burger.') }
      }
    });
  });

  $(document).on('submit', function(event) {
    event.preventDefault();
    $.ajax({
      url: '/api/burgers',
      method: 'POST',
      contentType: 'application/json',
      data: JSON.stringify({name: $('#burger-input').val()}),
      statusCode: {
        200: function() { location.reload() },
        500: function() { alert('Failed') }
      }
    });
  })
</script>
{{/section}}